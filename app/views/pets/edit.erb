<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>
<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Edit Name:</label>
  <br>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"><br></br>


    <label>Existing Owner:</label>
    <% @owners.each do |owner| %>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>><%=owner.name%></input>
    <%end%>
    <br>

    <label>New Owner:</label>
    <br>
    <label>Pet Owner:</label>
      <input  type="text" name="owner[name]" id="owner_name"></input>
      <br>

  <input type="submit" value="Update Pet">
</form>
